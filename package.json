{
  "name": "n8n-nodes-contentdrips",
  "version": "1.0.0",
  "description": "n8n node for Contentdrips API - create carousels and static graphics for social media content automation",
  "keywords": [
    "n8n-community-node-package",
    "contentdrips",
    "carousel",
    "graphics",
    "social-media",
    "content-creation",
    "automation"
  ],
  "license": "MIT",
  "homepage": "https://github.com/yourusername/n8n-nodes-contentdrips",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/n8n-nodes-contentdrips.git"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy",
    "copy": "copyfiles -u 1 nodes/**/*.png dist/",
    "dev": "tsc --watch",
    "lint": "eslint nodes credentials --ext .ts",
    "lintfix": "eslint nodes credentials --ext .ts --fix",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "files": [
    "dist",
    "LICENSE.md"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ContentdripsApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Contentdrips/Contentdrips.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@typescript-eslint/parser": "^5.45.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.29.0",
    "n8n-workflow": "~1.82.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
} 